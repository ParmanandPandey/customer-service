
@model Customer.Model.Models.LoginDataModel
@{
    var msg = Convert.ToString(TempData["LogginMessage"]);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tab-content" style="padding:10Px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="@Model.EmailId"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="@Model.EmailId" class="form-control" />
            </div>
            <span asp-validation-for="@Model.EmailId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="@Model.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="@Model.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 card-header">
                <p> <a asp-controller="Users" asp-action="ForgotPassword"> Forgot Password?</a></p>
                @*<p>  <a asp-controller="Users" asp-action="AddUser"> Ragister?</a></p>*@
            </div>

            <div class="col-3">
                <input type="submit" class="btn btn-primary" value="login" />
            </div>
            <div class="col-5">

            </div>
        </div>
        <div class="form-group row">
            @if (!string.IsNullOrEmpty(msg))
            {
                <span class="text-danger">@msg</span>
            }
        </div>

    </form>
</div>
